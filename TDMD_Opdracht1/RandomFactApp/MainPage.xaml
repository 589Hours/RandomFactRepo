<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RandomFactApp.MainPage">
           
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <!--IMAGE GENERATED BY BING AI-->
            <Image
                Source="useless_fact.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="fact in trashcan illustrating useless fact" 
            />

            <Label
                Text="Welcome to a useless fact generator"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />



            <Label
                x:Name="Fact"
                Text="{Binding FactToShow}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="No fact generated yet!" />

            <Button
                x:Name="GenerateFactButton"
                Text="Generate fact" 
                SemanticProperties.Hint="Counts the number of times you click"
                Command="{Binding GetNewRandomFactCommand}"
                HorizontalOptions="Fill" />

            <RadioButton
                x:Name="EnglishButton"
                Content="English"
                GroupName="Language"
                IsChecked="True"
            />
            <RadioButton
                x:Name="GermanButton"
                Content="German"
                GroupName="Language"
            />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
